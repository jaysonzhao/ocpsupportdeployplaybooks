{
    "kind": "Template",
    "apiVersion": "template.openshift.io/v1",
    "metadata": {
        "name": "serviceclient-template",
        "creationTimestamp": null,
        "annotations": {
            "description": "应用平台模板",
            "iconClass": "icon-perl",
            "openshift.io/display-name": "serviceclient-s2i",
            "openshift.io/documentation-url": "https://github.com/openshift/dancer-ex",
            "openshift.io/long-description": "This template defines resources needed to develop a Dancer based application, including a build configuration, application deployment configuration, and database deployment configuration.",
            "openshift.io/provider-display-name": "Red Hat, Inc.",
            "openshift.io/support-url": "https://access.redhat.com",
            "tags": "quickstart,perl,dancer",
            "template.openshift.io/bindable": "false"
        }
    },
    "message": "The following com.pactera.serviceclient.service(s) have been created in your project: ${APPLICATION_NAME}, ${DATABASE_SERVICE_NAME}.\n\nFor more information about using this template, including OpenShift considerations, see https://github.com/openshift/dancer-ex/blob/master/README.md.",
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "annotations": {
                    "description": "The web server's http port."
                },
                "labels": {
                    "application": "${APPLICATION_NAME}"
                },
                "name": "${APPLICATION_NAME}"
            },
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "apiVersion": "route.openshift.io/v1",
            "id": "${APPLICATION_NAME}-http-route",
            "kind": "Route",
            "metadata": {
                "annotations": {
                    "description": "Route for application's http com.pactera.corepanel.service."
                },
                "labels": {
                    "application": "${APPLICATION_NAME}"
                },
                "name": "${APPLICATION_NAME}-http-route"
            },
            "spec": {
                "host": "${APPLICATION_HOSTNAME}",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "apiVersion": "image.openshift.io/v1",
            "kind": "ImageStream",
            "metadata": {
                "labels": {
                    "application": "${APPLICATION_NAME}"
                },
                "name": "${APPLICATION_NAME}"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "annotations": {
                    "description": "Defines how to build the application",
                    "template.alpha.openshift.io/wait-for-ready": "true"
                },
                "name": "${APPLICATION_NAME}"
            },
            "spec": {
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}:latest"
                    }
                },
                "source": {
                    "git": {
                        "ref": "${SOURCE_REPOSITORY_REF}",
                        "uri": "${SOURCE_REPOSITORY_URL}"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "sourceStrategy": {
                        "env": [
                            {
                                "name": "COMPOSER_MIRROR",
                                "value": "${COMPOSER_MIRROR}"
                            },
                            {
                                "name": "MVN_PROFILE",
                                "value": "${MVN_PROFILE}"
                            }
                        ],
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "corepanel-s2i-is:1",
                            "namespace": "${NAMESPACE}"
                        }
                    },
                    "type": "Source"
                }
            }
        },
        {
            "apiVersion": "apps.openshift.io/v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "labels": {
                    "application": "${APPLICATION_NAME}"
                },
                "name": "${APPLICATION_NAME}"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "${APPLICATION_NAME}"
                },
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "application": "${APPLICATION_NAME}",
                            "deploymentConfig": "${APPLICATION_NAME}"
                        },
                        "name": "${APPLICATION_NAME}"
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "projectName",
                                        "value": "${CURRENT_PROJECT}"
                                    },
                                    {
                                        "name": "urlPrefix",
                                        "value": "${OPENSHIFT_URL}"
                                    },
                                    {
                                        "name": "admin",
                                        "value": "${OPENSHIFT_USER}"
                                    },
                                    {
                                        "name": "adminPassword",
                                        "value": "${OPENSHIFT_PASSWORD}"
                                    }
                                ],
                                "image": " ",
                                "imagePullPolicy": "Always",
                                "name": "${APPLICATION_NAME}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "name": "http",
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/bash",
                                            "-c",
                                            "curl http://localhost:8080"
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "${APPLICATION_NAME}"
                            ],
                            "from": {
                                "kind": "ImageStream",
                                "name": "${APPLICATION_NAME}:latest"
                            }
                        },
                        "type": "ImageChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {
            "name": "APPLICATION_NAME",
            "displayName": "Application Name",
            "description": "The name for the application.",
            "value": "serviceclient-app",
            "required": true
        },
        {
            "name": "APPLICATION_HOSTNAME",
            "displayName": "Application Hostname",
            "description": "Custom hostname for com.pactera.corepanel.service routes.  Leave blank for default hostname, e.g.: ..",
            "value": "serviceclient-app-corepanel.apps.cluster-98dc.98dc.sandbox1537.opentlc.com"
        },
        {
            "name": "NAMESPACE",
            "displayName": "Namespace",
            "description": "The OpenShift Namespace where the ImageStream resides.",
            "value": "corespaceapp",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_URL",
            "displayName": "Git Repository URL",
            "description": "The URL of the repository with your application source code.",
            "value": "http://gogs2-openshift.192.168.42.125.nip.io/csm/corepanel.git",
            "required": true
        },
        {
            "name": "SOURCE_REPOSITORY_REF",
            "displayName": "Git Reference",
            "description": "Set this to a branch name, tag or other ref of your repository if you are not using the default branch.",
            "value": "master"
        },
        {
            "name": "MVN_PROFILE",
            "displayName": "maven profile文件分支",
            "description": "maven profile文件分支",
            "value": "dev"
        },
        {
            "name": "COMPOSER_MIRROR",
            "displayName": "COMPOSER_MIRROR",
            "description": "nexus地址"
        },
        {
            "name": "CURRENT_PROJECT",
            "displayName": "CURRENT_PROJECT",
            "description": "当前项目名",
            "value": "camel-activemq"
        },
        {
            "name": "OPENSHIFT_URL",
            "displayName": "OPENSHIFT_URL",
            "description": "服务器地址",
            "value": "https://192.168.42.125:8443"
        },
        {
            "name": "OPENSHIFT_USER",
            "displayName": "OPENSHIFT_USER",
            "description": "服务器用户名",
            "value": "developer"
        },
        {
            "name": "OPENSHIFT_PASSWORD",
            "displayName": "OPENSHIFT_PASSWORD",
            "description": "服务器密码",
            "value": "123"
        }
    ],
    "labels": {
        "app": "serviceclient-s2i",
        "template": "serviceclient-s2i"
    }
}
